<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- The following macro is used to add the force/torque sensor to the iiwa robot -->
  <xacro:macro name="force_torque_sensor" params="robot_name link_name collision">
    <sensor name="${robot_name}_contactsensor_sensor" type="contact"> <!--force_torque-->
        <always_on>true</always_on>
        <contact>
          <collision>${collision}</collision>
        </contact>
        <plugin name="${link_name}_plugin" filename="libgazebo_ros_bumper.so">
          <bumperTopicName>${robot_name}_contactsensor_state</bumperTopicName>
          <frameName>${link_name}</frameName>
          <frameName>world</frameName>
        </plugin>
      </sensor>
  </xacro:macro>

</robot>
